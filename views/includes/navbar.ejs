<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meme Voting Arena</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      .face-icon{
        margin-right:5px;
        font-size:1.2rem;
      }
    </style>
</head>
<body>
  <% const user = typeof currUser !== 'undefined' ? currUser : null; %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container">
    <a class="navbar-brand" href="/listings"><i class="fa-solid fa-face-smile" style="margin-right: 5px;"></i>Meme Voting Arena</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link text-white" href="/listings"><b>Home</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/listings/new"><b>Upload</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/listings/leaderboard"><b>Leaderboard</b></a>
        </li>
      </ul>

      <form class="d-flex me-3" action="/listings/search" method="GET">
        <input class="form-control me-2" type="search" name="q" placeholder="Search memes..." aria-label="Search">
        <button class="btn btn-outline-light" type="submit">Search</button>
      </form>
      
      <div class="navbar-nav ">
  <% if(user){ %>
    <a class="nav-link text-white" href="/listings/favorites" style="font-size: 1.5rem;"><i class="fa-regular fa-heart text-white"></i></a>
  <% } %>
</div>

      <div class="navbar-nav">
        <% if(!user){ %>
          <a class="nav-link text-white" href="/signup"><b>Signup</b></a>
          <a class="nav-link text-white" href="/login"><b>Login</b></a>
        <% } else { %>
          <a class="nav-link text-white" href="/profile"><i class="fa-solid fa-circle-user face-icon"></i><b>Profile</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

