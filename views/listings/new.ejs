<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
    <h1 class="text-center mb-4">Upload a New Meme</h1>

    <form action="/listings" method="POST" class="mx-auto needs-validation" style="max-width: 600px;" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Meme Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter meme title" required>
            <div class="invalid-feedback">
                Please provide a title for your meme.
            </div>
        </div>

        <div class="mb-3">
            <label for="imageUrl" class="form-label">Upload new image</label>
            <input type="file" class="form-control" id="imageUrl" name="image" >
        </div>

        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-select" id="category" name="category" required>
                <option value="">Select Category</option>
                <option value="Study">Study</option>
                <option value="Family">Family</option>
                <option value="Work">Work</option>
                <option value="Love">Love</option>
                <option value="Pets">Pets</option>
                <option value="Internet">Internet</option>
                <option value="Gaming">Gaming</option>
                <option value="Food">Food</option>
                <option value="Life">Life</option>
                <option value="Movies">Movies</option>
                <option value="School">School</option>
                <option value="Tech">Tech</option>
            </select>
            <div class="invalid-feedback">
                Please select a category.
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Add Meme</button>
    </form>
</div>

<script>
    (function () {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>
