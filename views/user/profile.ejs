<% layout("/layouts/boilerplate") %>

<style>
  .profile-container {
    max-width: 500px;
    margin: 100px auto 50px auto;
  }

  .profile-card {
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    background-color: #ffffff;
    text-align: center;
  }

  .profile-card h2 {
    color: var(--arena-green);
    font-weight: 700;
    margin-bottom: 20px;
  }

  .profile-info {
    font-size: 1.1rem;
    margin-bottom: 15px;
    color: #333;
  }

  .logout-btn {
    background-color: #dc3545;
    border: none;
    padding: 10px 20px;
    font-weight: 600;
    color: #fff;
    border-radius: 8px;
    transition: background-color 0.3s ease;
  }

  .logout-btn:hover {
    background-color: #c82333;
  }
</style>

<div class="container profile-container">
  <div class="profile-card">
    <h2>Your Profile</h2>

    <h6 class="profile-info"><strong>Username:</strong> <%= user.username %></h6>
    <h6 class="profile-info"><strong>Email:</strong> <%= user.email %></h6>

    <form action="/logout" method="GET">
      <button type="submit" class="logout-btn">Logout</button>
    </form>
  </div>
</div>
